<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.graham.heartbit">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_heartbeat_solid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_heartbeat_solid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BreathingCoach"
            android:screenOrientation="sensorPortrait"></activity>
        <activity android:name=".IntroActivity" />
        <activity android:name=".InfoActivity" />
        <activity
            android:name=".GraphActivity"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".PickerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>